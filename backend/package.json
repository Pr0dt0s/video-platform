        "@typescript-eslint/parser": "^6.3.0",
        "concurrently": "^8.2.0",
        "eslint": "^8.47.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.0",
        "husky": "^8.0.3",
